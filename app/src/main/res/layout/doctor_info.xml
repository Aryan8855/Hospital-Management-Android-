<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".DoctorInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="40dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/doctor_info"
                    android:contentDescription="Doctor Icon"
                    android:layout_marginEnd="12dp"
                    tools:src="@drawable/doctor_info"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Info"
                    android:textColor="@android:color/black"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="First Name"
                    android:padding="12dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/rounded_edittext_border"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/et_surname"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Surname"
                    android:padding="12dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/rounded_edittext_border" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/et_blood_group"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Blood Group"
                    android:padding="12dp"
                    android:inputType="textCapCharacters"
                    android:background="@drawable/rounded_edittext_border"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Height"
                    android:padding="12dp"
                    android:inputType="text"
                    android:background="@drawable/rounded_edittext_border" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/et_phone_no"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Phone No"
                    android:padding="12dp"
                    android:inputType="phone"
                    android:background="@drawable/rounded_edittext_border"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/et_gender"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Gender"
                    android:padding="12dp"
                    android:inputType="text"
                    android:background="@drawable/rounded_edittext_border" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Address"
                android:padding="12dp"
                android:inputType="textPostalAddress"
                android:background="@drawable/rounded_edittext_border"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/et_specialization"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Specialization"
                    android:padding="12dp"
                    android:inputType="text"
                    android:background="@drawable/rounded_edittext_border"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/et_dob"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="DOB"
                    android:padding="12dp"
                    android:inputType="date"
                    android:background="@drawable/rounded_edittext_border" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_weight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Weight"
                android:padding="12dp"
                android:inputType="number"
                android:background="@drawable/rounded_edittext_border"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="145dp" />
            <EditText
                android:id="@+id/et_emergency_no"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Emergency No"
                android:padding="12dp"
                android:inputType="phone"
                android:background="@drawable/rounded_edittext_border"
                android:layout_marginBottom="75dp" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:backgroundTint="#6E8CFC"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>