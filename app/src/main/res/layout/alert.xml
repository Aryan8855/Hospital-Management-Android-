<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    tools:context=".SendAlertsActivity">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_arrow"
            android:contentDescription="Back"
            android:layout_marginEnd="16dp"
            app:tint="@android:color/black" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Alerts"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="normal" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_alerts_illustration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/alert"
        android:contentDescription="Alerts Illustration"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toTopOf="@id/buttons_layout"
        tools:src="@drawable/alert" />
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_doctor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Doctor"
            android:textColor="@android:color/white"
            android:backgroundTint="#6E8CFC"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            app:cornerRadius="12dp" />

        <Button
            android:id="@+id/btn_medicine"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Medicine"
            android:textColor="@android:color/white"
            android:backgroundTint="#6E8CFC"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            app:cornerRadius="12dp"
            tools:text="Medicle"/> <Button
        android:id="@+id/btn_both"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Both"
        android:textColor="@android:color/white"
        android:backgroundTint="#6E8CFC"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>