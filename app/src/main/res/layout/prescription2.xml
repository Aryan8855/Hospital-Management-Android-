<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".OnlinePrescriptionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online Prescription"
                    android:textColor="@android:color/black"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:id="@+id/iv_hospital_stamp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/Stamp"
                    android:contentDescription="Hospital Stamp Logo"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    tools:src="@drawable/Stamp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient &amp; Doctor Info"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:useDefaultMargins="true"
                android:alignmentMode="alignBounds"
                android:columnOrderPreserved="false"
                android:layout_marginBottom="32dp">

                <EditText
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="50dp"
                    android:hint="Doctor Name"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_edittext_bg_border"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="50dp"
                    android:text="Patient Gender\nDrop Down"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"
                    android:lines="2"
                    android:background="@drawable/rounded_edittext_bg_border" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="50dp"
                    android:hint="Patient Name"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_edittext_bg_border"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="50dp"
                    android:text="Patient Age\nDrop Down"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"
                    android:lines="2"
                    android:background="@drawable/rounded_edittext_bg_border" />

            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diagnosis"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Type Here"
                android:gravity="top|start"
                android:padding="16dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_edittext_large_bg"
                android:layout_marginBottom="32dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicines"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Medicines 1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_edittext_bg_border"
                android:layout_marginBottom="16dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Medicines 1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_edittext_bg_border"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Add Medicines +"
                android:gravity="center"
                android:textColor="#6E8CFC"
                android:textSize="16sp"
                android:background="@drawable/rounded_edittext_bg_border"
                android:layout_marginBottom="40dp" />

            <Button
                android:id="@+id/btn_share"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Share"
                android:textColor="@android:color/white"
                android:backgroundTint="#6E8CFC"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>